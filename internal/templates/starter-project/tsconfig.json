{
    "compilerOptions": {
        "target": "ES2017",
        "module": "esnext",
        "moduleResolution": "bundler",
        "skipLibCheck": true,
        "strict": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "useDefineForClassFields": false,
        "outDir": "./dist",
        "noEmit": true
    },
    "exclude": [
        "views",
        "dist",
        "node_modules"
    ]
}